@model MyApp.Models.ReviewCreateViewModel

@{
    ViewData["Title"] = "Reviews";
}

<partial name="~/Views/Shared/_UserRoleNav.cshtml" />

<h2>Create PDF from your text</h2>

<form asp-action="Reviews" asp-asp-controller="UserRole" method="post" target="_blank">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Advice" class="form-label">Enter text to include in PDF</label>
        <textarea asp-for="Advice" class="form-control" rows="6" placeholder="Type anything here..."></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Generate PDF</button>
    <a class="btn btn-outline-primary" asp-action="Reviews">Clear</a>
    <p class="text-muted mt-2">
        The PDF will open in a new tab.
    </p>
</form>