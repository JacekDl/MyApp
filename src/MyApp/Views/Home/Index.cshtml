@{
    ViewData["Title"] = "Strona główna";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-8">

            <h1 class="fw-bold mb-4 text-center">Witamy w PharmCare!</h1>

            <div class="card border-0 mb-1">
                <div class="card-body p-4 p-md-5">
                    <div class="row align-items-center">

                        <div class="col-md-6">
                            <h2 class="fw-bold mb-3 text-center">
                                Dla pacjenta
                            </h2>

                            <p class="text-muted mb-4">
                                Zadbaj o swoje zdrowie dzięki przejrzystemu dostępowi 
                                do leków  i zaleceń — zawsze wtedy, gdy ich potrzebujesz.<br />
                                Dodatkowo masz szybki 
                                kontakt z farmaceutą, gdy potrzebujesz porady.
                            </p>

                            <div class="d-grid gap-2">
                                <a asp-controller="Account"
                                   asp-action="Register"
                                   class="btn btn-success btn-lg">
                                    Rejestracja
                                </a>

                                <a asp-controller="Account"
                                   asp-action="Login"
                                   class="btn btn-outline-success btn-lg">
                                    Logowanie
                                </a>
                            </div>
                        </div>

                        <div class="col-md-6 text-center mt-4 mt-md-0">
                            <img src="~/images/picture.png"
                                 class="img-fluid rounded shadow-sm"
                                 style="max-width: 280px;"
                                 alt="Zdjęcie użytkownika" />
                        </div>

                    </div>
                </div>
            </div>

            <div class="card border-0">
                <div class="card-body p-4 p-md-5">
                    <div class="row align-items-center">

                        <div class="col-md-6 text-center mb-4 mb-md-0">
                            <img src="~/images/farmaceuta.png"
                                 class="img-fluid rounded shadow-sm"
                                 style="max-width: 280px;"
                                 alt="Farmaceuta" />
                        </div>

                        <div class="col-md-6">
                            <h2 class="fw-bold mb-3 text-center">
                                Dla farmaceuty
                            </h2>

                            <p class="text-muted mb-4">
                                Dołącz do platformy stworzonej z myślą o farmaceutach.
                                Wspieraj pacjentów, zarządzaj terapiami i komunikuj się
                                w nowoczesny oraz bezpieczny sposób.
                            </p>

                            <div class="d-grid gap-2">
                                <a asp-controller="Account"
                                   asp-action="Register"
                                   class="btn btn-success btn-lg">
                                    Rejestracja
                                </a>

                                <a asp-controller="Account"
                                   asp-action="Login"
                                   class="btn btn-outline-success btn-lg">
                                    Logowanie
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
