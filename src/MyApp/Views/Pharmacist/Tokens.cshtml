@using MyApp.Domain.Reviews
@using MyApp.Web.ViewModels
@model List<ReviewDto>

@{
    ViewData["Title"] = "Wystawione zalecenia";
    var searchTxt = (string?)ViewBag.Query ?? "";
    var completed = (string?)ViewBag.Completed ?? "";
}

<partial name="~/Views/Shared/_PharmacistNav.cshtml" />

<div class="mb-3">
    <form method="get" asp-action="Tokens" class="d-flex gap-2">
        <input type="text" name="searchTxt" value="@searchTxt" class="form-control" placeholder="Wyszukaj tekst..." />
        <select name="completed" class="form-select">
            <option value="" selected="@(string.IsNullOrEmpty(completed) ? "selected" : null)">Wszystkie</option>
            <option value="true" selected=@(completed == "true" ? "selected" : null)>Ukończone</option>
            <option value="false" selected=@(completed == "false" ? "selected" : null)>Nieukończone</option>
        </select><button type="submit" class="btn btn-primary">Filtruj</button>
        <a asp-action="Tokens" class="btn btn-outline-secondary">Wyczyść</a>
    </form>

</div>

@if (!Model.Any())
{
    <div class="alert alert-light">Nie dodałeś jeszcze żadnych zaleceń. Zrób to w zakładce Zalecenia.</div>
}
else
{
    <div class="table-responsive-sm">
        <table class="table table-sm align-middle mb-0">
            <thead>
                <tr>
                    <th scope="col" class="text-nowrap">Utworzono</th>
                    <th scope="col">Treść</th>
                    <th scope="col" class="text-nowrap">Status</th>
                    <th scope="col" class="text-nowrap">Ukończone</th>
                    <th scope="col" class="text-end" colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rev in Model)
                {
                    <tr>
                        <td class="text-nowrap">@rev.DateCreated.ToString("yy-MM-dd")</td>
                        <td class="text-break" style="white-space: pre-wrap;">@rev.Text</td>
                        <td>
                            <span class="d-inline d-md-none text-muted me-2">Status:</span>
                            @if (rev.IsNewForViewer)
                            {
                                <span class="badge bg-success">Nowe</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Obejrzane</span>
                            }
                        </td>
                        <td class="text-nowrap">@((rev.Completed) ? "Tak" : "Nie")</td>

                        <td class="text-end">
                            <div class="d-grid gap-2 d-md-inline">
                                <a asp-action="Display"
                                   asp-controller="Conversation"
                                   asp-route-number="@rev.Number"
                                   class="btn btn-sm btn-outline-primary w-100 w-md-auto text-nowrap">
                                    Podgląd
                                </a>
                            </div>
                        </td>

                        <td class="text-start text-md-end">
                            <form asp-action="DeleteReview" method="post" asp-route-id="@rev.Id" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="btn btn-sm btn-outline-danger w-100 w-md-auto text-nowrap"
                                        onclick="return confirm('Czy na pewno chcesz usunąć ten wpis?');">
                                    Usuń
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


