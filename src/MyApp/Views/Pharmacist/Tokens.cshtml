@using MyApp.Domain.Reviews
@using MyApp.Web.ViewModels
@model List<ReviewDto>

@{
    ViewData["Title"] = "Your reviews";
    var searchTxt = (string?)ViewBag.Query ?? "";
    var completed = (string?)ViewBag.Completed ?? "";
}

<partial name="~/Views/Shared/_PharmacistNav.cshtml" />

<div class="mb-3">
    <form method="get" asp-action="Tokens" class="d-flex gap-2">
        <input type="text" name="searchTxt" value="@searchTxt" class="form-control" placeholder="Wyszukaj tekst..." />
        <select name="completed" class="form-select">
            <option value="" selected="@(string.IsNullOrEmpty(completed) ? "selected" : null)">Wszystkie</option>
            <option value="true" selected=@(completed == "true" ? "selected" : null)>Ukończone</option>
            <option value="false" selected=@(completed == "false" ? "selected" : null)>Nieukończone</option>
        </select><button type="submit" class="btn btn-primary">Filtruj</button>
        <a asp-action="Tokens" class="btn btn-outline-secondary">Wyczyść</a>
    </form>

</div>

@if (!Model.Any())
{
    <div class="alert alert-light">Nie dodałeś jeszcze żadnych zaleceń. Zrób to w zakładce Zalecenia.</div>
}
else
{
    <div class="container">
        <div class="row fw-bold border-bottom py-2">
            <div class="col-2">Utworzono</div>
            <div class="col-7">Tekst</div>
            <div class="col-1">Status</div>
            <div class="col-1">Ukończone</div>
            <div class="col-1 text-end"></div>
        </div>

        @foreach (var rev in Model)
        {
            <div class="row align-items-center border-bottom py-2 @(rev.IsNewForViewer ? "bg-warning-subtle" : "")">
                <div class="col-2">@rev.DateCreated.ToString("yyyy-MM-dd HH:mm")</div>
                <div class="col-7">@rev.Text</div>
                <div class="col-1">
                    @if (rev.IsNewForViewer)
                    {
                        <span class="badge bg-success">Nowe</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Obejrzane</span>
                    }
                </div>
                <div class="col-1">@((rev.Completed) ? "Tak" : "Nie")</div>
                <div class="col-1 text-end">
                    <a asp-action="Display" asp-controller="Conversation" asp-route-number="@rev.Number"
                       class="btn btn-sm btn-outline-primary">Info</a>
                </div>
            </div>
        }
    </div>
}


