@model MyApp.Web.ViewModels.ReviewsViewModel;

@{
    ViewData["Title"] = "Wystawione zalecenia";
    var searchTxt = (string?)ViewBag.Query ?? "";
    var completed = (string?)ViewBag.Completed ?? "";
    var reviews = Model.Reviews;

    var totalPages = Model.TotalPages;
    var page = Model.Page;
    var pageSize = Model.PageSize;
}

<partial name="~/Views/Shared/_PharmacistNav.cshtml" />

<div class="mb-3">
    <form method="get" asp-action="Tokens" class="d-flex gap-2">
        <input type="text" name="searchTxt" value="@searchTxt" class="form-control" placeholder="Wyszukaj tekst..." />
        <select name="completed" class="form-select">
            <option value="" selected="@(string.IsNullOrEmpty(completed) ? "selected" : null)">Wszystkie</option>
            <option value="true" selected=@(completed == "true" ? "selected" : null)>Ukończone</option>
            <option value="false" selected=@(completed == "false" ? "selected" : null)>Nieukończone</option>
        </select>
        <button type="submit" class="btn btn-secondary">Filtruj</button>
        <a asp-action="Tokens" class="btn btn-secondary">Wyczyść</a>
    </form>

</div>



@if (!reviews.Any())
{
    <div class="alert alert-light">Nie znaleziono zaleceń.</div>
}
else
{
    <form method="get" class="d-flex align-items-center gap-2 mb-3">
        <input type="hidden" name="searchTxt" value="@ViewBag.Query" />
        <input type="hidden" name="page" value="1" />

        <label class="form-label mb-0">Na stronę:</label>
        <select name="pageSize" class="form-select form-select-sm" style="width:auto" onchange="this.form.submit()">
            <option value="5" selected="@(Model.PageSize == 5)">5</option>
            <option value="10" selected="@(Model.PageSize == 10)">10</option>
            <option value="20" selected="@(Model.PageSize == 20)">20</option>
            <option value="50" selected="@(Model.PageSize == 50)">50</option>
        </select>
    </form>

    <div class="table-responsive-sm">
        <table class="table table-sm align-middle mb-0">
            <thead>
                <tr>
                    <th scope="col" class="col-1 text-nowrap">Utworzono</th>
                    <th scope="col" class="col-7">Treść</th>
                    <th scope="col" class="col-1 text-nowrap">Status</th>
                    <th scope="col" class="col-1">Ukończono</th>
                    <th scope="col" class="col-2" colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rev in reviews)
                {
                    <tr>
                        <td class="text-nowrap">@rev.DateCreated.ToString("yy-MM-dd")</td>
                        <td class="text-break" style="white-space: pre-wrap;">@rev.Text</td>
                        <td>
                            @if (rev.IsNewForViewer)
                            {
                                <span class="badge bg-success">Nowe</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Obejrzane</span>
                            }
                        </td>
                        <td class="text-nowrap">@((rev.Completed) ? "Tak" : "Nie")</td>

                        <td class="text-end">
                            <div class="d-grid gap-2 d-md-inline">
                                <a asp-action="Display"
                                   asp-controller="Conversation"
                                   asp-route-number="@rev.Number"
                                   class="btn btn-sm btn-secondary w-100 w-md-auto text-nowrap">
                                    Podgląd
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (totalPages > 1)
{
    <nav aria-label="Paginacja" class="mt-4">
        <ul class="pagination justify-content-center">

            <li class="page-item @(page <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Tokens"
                   asp-controller="Pharmacist"
                   asp-route-page="@(page - 1)"
                   asp-route-pageSize="@pageSize"
                   asp-route-searchTxt="@ViewBag.Query">«</a>
            </li>

            @for (var p = 1; p <= totalPages; p++)
            {
                <li class="page-item @(p == page ? "active" : "")">
                    <a class="page-link"
                       asp-action="Tokens"
                       asp-controller="Pharmacist"
                       asp-route-page="@p"
                       asp-route-pageSize="@pageSize"
                       asp-route-searchTxt="@ViewBag.Query">@p</a>
                </li>
            }

            <li class="page-item @(page >= totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Tokens"
                   asp-controller="Pharmacist"
                   asp-route-page="@(page + 1)"
                   asp-route-pageSize="@pageSize"
                   asp-route-searchTxt="@ViewBag.Query">»</a>
            </li>

        </ul>
    </nav>
}


