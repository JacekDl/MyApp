@using MyApp.ViewModels
@model ReviewCreateViewModel

@{
    ViewData["Title"] = "Create Review";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

<partial name="~/Views/Shared/_UserRoleNav.cshtml" />

<form asp-action="Reviews" asp-asp-controller="Pharmacist" method="post" target="_blank">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Advice" class="form-label">Enter text to include in PDF</label>
        <textarea asp-for="Advice" class="form-control" rows="6" placeholder="Type anything here..."></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Generate PDF</button>
    <!-- <a class="btn btn-outline-primary" asp-action="Reviews">Clear</a> -->
    <button type="button" class="btn btn-secondary" id="clearBtn">Clear</button>
    <p class="text-muted mt-2">
        The PDF will open in a new tab.
    </p>
</form>

@section Scripts {
    <script>
        document.getElementById("clearBtn").addEventListener("click", function () {
            const form = this.closest("form");
            if (form) {
                form.reset();
            }
        });
    </script>
}