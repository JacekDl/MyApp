@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="patient-panel app-panel border rounded-3 p-4 d-flex flex-column flex-grow-1">
    <partial name="~/Views/Shared/_PatientNav.cshtml" />

    <div>
        <partial name="~/Views/Shared/_Breadcrumbs.cshtml" />
    </div>

    <div class="patient-panel__content flex-grow-1 pt-3 d-flex flex-column">
        @RenderBody()
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
}