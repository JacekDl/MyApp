@model MyApp.Web.ViewModels.ViewModelBase;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyApp</title>
    <script type="importmap"></script>
    <script src="~/js/theme.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">
    <header class="sticky-top">
        <partial name="~/Views/Shared/_NavbarPartial.cshtml" />
    </header>

    <div class="container">
        <div>
            <partial name="~/Views/Shared/_Breadcrumbs.cshtml" />
        </div>
        <main role="main" class="flex-fill">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center py-3 mt-auto">
        <div class="container">
            &copy; 2025 - MyApp
        </div>
    </footer>

    <partial name="~/Views/Shared/_ToastsPartial.cshtml" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
