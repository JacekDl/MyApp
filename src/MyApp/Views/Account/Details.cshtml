@model MyApp.Application.Users.UserDto;

@{
    ViewData["Title"] = "Account Details";
    // var email = (string)ViewBag.Email;
    // var name = (string)ViewBag.Name;
    // var pharmacy = (string)ViewBag.PharmacyName;
    // var city = (string)ViewBag.PharmacyCity;
    // var created = (DateTime)ViewBag.CreatedUtc;

}

<h1 class="mb-3">@ViewData["Title"]</h1>

@if(TempData["Info"] is string info)
{
    <div class="alert alert-success">@info</div>
}

<div class="card mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>
            <dt class="col-sm-3">Pharmacy</dt>
            <dd class="col-sm-9">@Model.PharmacyName</dd>
            <dt class="col-sm-3">City</dt>
            <dd class="col-sm-9">@Model.PharmacyCity</dd>
            <dt class="col-sm-3">Created</dt>
            <dd class="col-sm-9">@Model.CreatedUtc.ToString("yyyy-MM-dd HH:mm")</dd>
        </dl>
    </div>
</div>

<div class="d-grip gap-2 d-md-flex">
    <a class="btn btn-outline-primary" asp-action="ChangeEmail">Change Email</a>
    <a class="btn btn-outline-primary" asp-action="ChangePassword">Change Password</a>
    <a class="btn btn-outline-primary" asp-action="EditProfile">Add / Edit Profile Data</a>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Back</a>
</div>