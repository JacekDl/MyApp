@model MyApp.Web.ViewModels.DetailsViewModel;

@{
    ViewData["Title"] = "Szczegóły konta";
    var user = Model.User;
}

<div class="card mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@user.Email</dd>
            <dt class="col-sm-3">Imię</dt>
            <dd class="col-sm-9">@user.DisplayName</dd>
            <dt class="col-sm-3">Utworzono</dt>
            <dd class="col-sm-9">@user.CreatedUtc.ToString("yyyy-MM-dd HH:mm")</dd>
        </dl>
    </div>
</div>

<div class="d-grid gap-2 d-sm-flex justify-content-sm-center mt-3">
    <a class="btn btn-secondary" asp-action="ChangeEmail">Zmień email</a>
    <a class="btn btn-secondary" asp-action="ChangePassword">Zmień hasło</a>
    <a class="btn btn-secondary" asp-action="EditProfile">Zmień dane konta</a>
    @if(!User.IsInRole("Admin"))
    {
        <form asp-action="DeleteProfile" method="post">
            <button type="submit"
                    class="btn btn-secondary w-100"
                    onclick="return confirm('Czy na pewno chcesz usunąć konto?');">
                Usuń konto
            </button>
        </form>
    }
</div>