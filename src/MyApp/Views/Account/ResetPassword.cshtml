@model MyApp.Web.ViewModels.ResetPasswordRequestViewModel

<h2>Reset hasła</h2>

<form asp-action="ResetPassword" method="post" class="mt-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" autocomplete="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-secondary">Wyślij</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}