@model MyApp.Web.ViewModels.ResetPasswordConfirmViewModel

<div class="d-flex justify-content-center gap-2 mt-3">
    <h2>Ustaw nowe hasło</h2>
</div>

<div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="border rounded-3 p-4 app-panel">
            <form asp-action="ResetPasswordConfirm" method="post" class="mt-3">
                @Html.AntiForgeryToken()

                <input asp-for="UserId" type="hidden" />
                <input asp-for="Token" type="hidden" />
                <input asp-for="ReturnUrl" type="hidden" />

                <div class="mb-3">
                    <label asp-for="NewPassword" class="form-label">Nowe hasło</label>
                    <input asp-for="NewPassword" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Potwierdź hasło</label>
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="d-grid d-sm-flex justify-content-sm-center">
                    <button type="submit" class="btn btn-success">Zapisz nowe hasło</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}