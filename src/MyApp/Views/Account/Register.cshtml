@using MyApp.Web.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
    var returnUrl = (string?)ViewData["ReturnUrl"] ?? string.Empty;

    var role = (string?)ViewData["Role"] ?? "Patient";
    string roleLabel = role == "Pharmacist" ? "Farmaceuta" : "Pacjent";
}

<div class="d-flex justify-content-center gap-2 mt-3">
    <h2>Rejestracja</h2>
</div>


<div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
        <div class="border rounded-3 p-4 app-panel">

            <div class="d-flex justify-content-center gap-3 mb-4">
                <a asp-controller="Account"
                    asp-action="Register"
                    asp-route-role="Pharmacist"
                    asp-route-returnUrl="@returnUrl"
                    class="btn role-btn @(role == "Pharmacist" ? "btn-secondary" : "btn-outline-secondary") flex-fill text-center"
                    style="max-width:220px;">
                    Farmaceuta
                </a>

                <a asp-controller="Account"
                    asp-action="Register"
                    asp-route-role="Patient"
                    asp-route-returnUrl="@returnUrl"
                    class="btn role-btn @(role=="Patient" ? "btn-secondary" : "btn-outline-secondary") flex-fill text-center"
                    style="max-width:220px;">
                    Pacjent
                </a>
            </div>

            <form asp-controller="Account" asp-action="Register" asp-route-returnUrl="@returnUrl" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" name="role" value="@role" />
                <input type="hidden" name="returnUrl" value="@returnUrl" />

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Hasło</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Potwierdź hasło</label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-grid d-sm-flex justify-content-sm-center">
                    <button type="Submit" class="btn btn-outline-secondary">Utwórz konto</button>
                </div>
            </form>

            <div class="d-flex justify-content-center mt-4">
                <form asp-controller="Account"
                        asp-action="ExternalLogin"
                        method="post"
                        class="mt-4">

                    @Html.AntiForgeryToken()

                    <input type="hidden" name="provider" value="Google" />
                    <input type="hidden" name="role" value="@role" />
                    <input type="hidden" name="returnUrl" value="@returnUrl" />

                    <button type="submit" class="gsi-material-button w-100">
                        <div class="gsi-material-button-state"></div>

                        <div class="gsi-material-button-content-wrapper">
                            <div class="gsi-material-button-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
                                    <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z" />
                                    <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z" />
                                    <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z" />
                                    <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z" />
                                </svg>
                            </div>

                            <span class="gsi-material-button-contents">
                                Zarejestruj się jako @roleLabel przez Google
                            </span>

                            <span style="display:none;">
                                Zarejestruj się przez Google
                            </span>
                        </div>
                    </button>
                </form>
            </div>

            <div class="text-center mt-3">
                <span>Masz już konto?</span>
                <a asp-controller="Account"
                    asp-action="Login"
                    class="ms-1">
                    Zaloguj się
                </a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}