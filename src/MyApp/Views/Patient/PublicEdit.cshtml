@using MyApp.Web.ViewModels
@model PublicReviewEditViewModel

@{
    ViewData["Title"] = "Wystaw opinię.";
}

<div class="container py-4">
    <div>
        <form asp-action="PublicEdit" asp-route-number="@Model.Number" method="post">
            @Html.AntiForgeryToken()

            <input asp-for="Number" type="hidden" />
            <input asp-for="Advice" type="hidden" />

            <div class="mb-3">
                <label class="form-label">Zalecenia farmaceuty</label>
                <div class="form-control-plaintext">@Model.Advice</div>
            </div>

            <div class="mb-3">
                <label asp-for="ReviewText" class="form-label">Twoja opinia</label>
                <textarea asp-for="ReviewText" class="form-control" rows="6" placeholder="Napisz swoją opinię (maksymalnie 200 znaków). 
Proszę nie zamieszczać danych osobowych."></textarea>
            </div>

            <div class="d-flex justify-content-center gap-2 mt-3">
                <button id="saveBtn" type="submit" class="btn btn-secondary">Dodaj opinię</button>
                <a asp-action="GetReview" asp-route-number="@Model.Number" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>