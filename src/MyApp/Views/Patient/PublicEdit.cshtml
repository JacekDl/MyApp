@using MyApp.Web.ViewModels
@model PublicReviewEditViewModel

@{
    ViewData["Title"] = "Edytuj opinię.";
}

<div class="container py-4">
    <div class="col-lg-8">
        @if (!string.IsNullOrWhiteSpace(Model.Advice))
        {
            <div class="card mb-4">
                <div class="card-header">Zalecenia farmaceuty</div>
                <div class="card-body">
                    <pre class="mb-0" style="white-space:pre-wrap;">@Model.Advice</pre>
                </div>
            </div>
        }

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <form asp-action="PublicEdit" asp-route-number="@Model.Number" method="post" novalidate>
            @Html.AntiForgeryToken()


            <div class="mb-3">
                <label asp-for="ReviewText" class="form-label">Twoja opinia</label>
                <textarea asp-for="ReviewText" class="form-control" rows="6" placeholder="Napisz swoją opinię…"></textarea>
                <span asp-validation-for="ReviewText" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Number" />

            <div class="d-flex gap-2">
                <button id="saveBtn" type="submit" class="btn btn-primary">Zapisz</button>
                <a asp-action="GetReview" asp-route-number="@Model.Number" class="btn btn-outline-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>