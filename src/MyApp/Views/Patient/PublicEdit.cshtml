@using MyApp.Web.ViewModels
@model PublicReviewEditViewModel

@{
    ViewData["Title"] = "Your review";
}

<h2>Your review</h2>

@if(TempData["Saved"] is not null)
{
    <div class="alert alert-success">Saved!</div>
}

<div class="mb-3">
    <label class="form-label">Advice</label>
    <div class="form-control-plaintext">@Model.Advice</div>
</div>

<form method="post" asp-action="PublicEdit" asp-route-number="@Model.Number">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="@Model.Number" />

    <div class="mb-3">
        <label class="form-label">Your response</label>
        <textarea class="form-control" rows="8" asp-for="ReviewText" placeholder="Write your review here..."></textarea>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
</form>