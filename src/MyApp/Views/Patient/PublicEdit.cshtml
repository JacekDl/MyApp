@model MyApp.Web.ViewModels.PublicReviewEditViewModel

@{
    ViewData["Title"] = "Wystaw opinię.";
}

<div class="patient-panel app-panel border rounded-3 p-4 d-flex flex-column flex-grow-1">
    <div class="container py-4">
        <div>
            <form asp-action="PublicEdit" asp-route-number="@Model.Number" method="post">
                @Html.AntiForgeryToken()

                <input asp-for="Number" type="hidden" />
                <input asp-for="AdviceFullText" type="hidden" />

                <h3 class="mb-3">Zalecenia farmaceuty</h3>

                <div class="mb-3">
                    <div class="form-control-plaintext">@Model.AdviceFullText</div>
                </div>

                <hr />

                <h3 class="mb-3">Twoje uwagi</h3>
                <div class="mb-3">
                    <label asp-for="ReviewText" class="form-label">Poniżej możesz zamieścić swoje uwagi i spostrzeżenia
                        odnośnie zaleconej terapii. Będą one widoczne anonimowo dla farmaceuty, który Ci ją zlecił.
                        Dzięki Twojej opinii przyczynisz się do zwiększenia bezpieczeństwa stosowania leków.
                        Proszę nie umieszczać danych osobowych.
                    </label>
                    <textarea asp-for="ReviewText" 
                        class="form-control" 
                        rows="6" 
                        placeholder="Tutaj możesz wpisać swoje uwagi (maksymalnie 200 znaków). ">
                    </textarea>
                </div>

                <div class="d-flex justify-content-center gap-2 mt-3">
                    <button id="saveBtn" type="submit" class="btn btn-success">Dodaj uwagi</button>
                    <a asp-action="GetReview" asp-route-number="@Model.Number" class="btn btn-outline-success">Anuluj</a>
                </div>
            </form>
        </div>
    </div>
</div>