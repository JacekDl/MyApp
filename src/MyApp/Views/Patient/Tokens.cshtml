@model MyApp.Web.ViewModels.ReviewsViewModel;

@{
    ViewData["Title"] = "Twoje zalecenia";
    var searchTxt = (string?)ViewBag.Query ?? "";
    var reviews = Model.Reviews;
}

<partial name="~/Views/Shared/_PatientNav.cshtml" />

<div class="mb-3">
    <form method="get" asp-action="Tokens" class="d-flex gap-2">
        <input type="text" name="searchTxt" value="@searchTxt" class="form-control" placeholder="Wyszukaj..." />
        <button type="submit" class="btn btn-secondary">Filtruj</button>
        <a asp-action="Tokens" class="btn btn-secondary">Wyczyść</a>
    </form>

</div>

@if (!reviews.Any())
{
    <div class="alert alert-light">Nie znaleziono zaleceń.</div>
}
else
{
    
    <table class="table table-stripped align-middle">
        <thead>
            <tr>
                <th>Utworzono</th>
                <th>Treść</th>
                <th>Status</th>
                <th>Ukończono</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rev in reviews)
            {
                <tr>
                    <td>@rev.DateCreated.ToString("yyyy-MM-dd")</td>
                    <td>@rev.Text</td>
                    <td>
                        @if (rev.IsNewForViewer)
                        {
                            <span class="badge bg-success">Nowe</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Obejrzane</span>
                        }
                    </td>
                    <td>@(rev.Completed ? "Tak" : "Nie")</td>
                    <td>
                        <a asp-action="Display" asp-controller="Conversation" asp-route-number="@rev.Number"
                           class="btn btn-sm btn-secondary">Podgląd</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}


