@model IReadOnlyList<MyApp.Domain.Instructions.InstructionDto>

@{
    ViewData["Title"] = "Dawkowanie";
}

<partial name="~/Views/Shared/_AdminNav.cshtml" />

<div class="container mt-3">
    <div class="mb-3">
        <form asp-action="AddInstruction" asp-controller="Medicine" method="post" class="row g-2">
            @Html.AntiForgeryToken()
            <div class="col-sm-3">
                <input name="Code" class="form-control" placeholder="Kod" maxlength="64" required />
            </div>
            <div class="col-sm-7">
                <input name="Text" class="form-control" placeholder="Dawkowanie" maxlength="1024" required />
            </div>
            <div class="col-sm-2 d-grid">
                <button type="submit" class="btn btn-outline-primary">Dodaj</button>
            </div>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead>
                <tr>
                    <th scope="col" class="col-2">Kod</th>
                    <th scope="col" class="col-8">Dawkowanie</th>
                    <th scope="col" class="col-2" colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-2">@item.Code</td>
                        <td class="col-8 text-break">@item.Text</td>
                        <td class="col-1 text-end">
                            <form asp-action="ModifyInstruction" asp-controller="Medicine" method="get" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-primary">
                                    Zmień
                                </button>
                            </form>
                        </td>
                        <td class="col-1 text-start">
                            <form asp-action="DeleteInstruction" asp-controller="Medicine" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                        onclick="return confirm('Czy na pewno chcesz usunąć?');">
                                    Usuń
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
