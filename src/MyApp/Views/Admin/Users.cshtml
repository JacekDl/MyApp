@model MyApp.Web.ViewModels.UsersViewModel

@{
    ViewData["Title"] = "Użytkownicy";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var users = Model.Users;

    var totalPages = Model.TotalPages;
    var page = Model.Page;
    var pageSize = Model.PageSize;

    var window = 1;
    int Clamp(int v, int min, int max) => v < min ? min : (v > max ? max : v);

    var start = Clamp(page - window, 2, Math.Max(2, totalPages - 1));
    var end = Clamp(page + window, 2, Math.Max(2, totalPages - 1));

    if (start > end) { start = end; }
}

<h3 class="mb-3">Użytkownicy aplikacji</h3>

@if (!users.Any())
{
    <div class="alert alert-light">Nie znaleziono żadnych użytkowników.</div>
}
else
{
    <form method="get" class="d-flex align-items-center gap-2 mb-3">
        <input type="hidden" name="page" value="1" />

        <label class="form-label mb-0">Na stronę:</label>
        <select name="pageSize" class="form-select form-select-sm" style="width:auto" onchange="this.form.submit()">
            <option value="5" selected="@(Model.PageSize == 5)">5</option>
            <option value="10" selected="@(Model.PageSize == 10)">10</option>
            <option value="20" selected="@(Model.PageSize == 20)">20</option>
            <option value="50" selected="@(Model.PageSize == 50)">50</option>
        </select>
    </form>

    <div class="table-responsive-sm">
        <table class="table table-sm align-middle mb-0">
            <thead>
                <tr>
                    <th scope="col" class="col-2">Utworzono</th>
                    <th scope="col" class="col-7">Email</th>
                    <th scope="col" class="col-1">Rola</th>
                    <th scope="col" class="col-2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var user in Model.Users)
                {
                    <tr>
                        <td>@user.CreatedUtc.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        @if (!string.Equals(user.Role, "Admin", StringComparison.OrdinalIgnoreCase))
                        {
                            <td class="col-1 text-end">
                                <form asp-controller="Admin" asp-action="Plans" method="get" style="display:inline">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="btn btn-sm btn-secondary">Plany</button>
                                </form>
                            </td>

                            <td class="col-1 text-start">
                                <button type="button"
                                        class="btn btn-sm btn-secondary"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteUserModal-@user.Id">
                                    Usuń
                                </button>

                                <div class="modal fade"
                                     id="deleteUserModal-@user.Id"
                                     tabindex="-1"
                                     aria-labelledby="deleteUserModalLabel-@user.Id"
                                     aria-hidden="true"
                                     data-bs-backdrop="static"
                                     data-bs-keyboard="false">

                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">

                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteUserModalLabel-@user.Id">
                                                    Potwierdzenie usunięcia użytkownika
                                                </h5>
                                                <button type="button"
                                                        class="btn-close"
                                                        data-bs-dismiss="modal"
                                                        aria-label="Zamknij"></button>
                                            </div>

                                            <div class="modal-body">
                                                <p class="mb-0">
                                                    Czy na pewno chcesz <strong>trwale usunąć użytkownika</strong>?
                                                    <br />
                                                    <small class="text-muted">
                                                        @user.Email
                                                    </small>
                                                    <br />
                                                    Tej operacji nie można cofnąć.
                                                </p>
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button"
                                                        class="btn btn-outline-secondary"
                                                        data-bs-dismiss="modal">
                                                    Anuluj
                                                </button>

                                                <form asp-action="RemoveUser"
                                                      asp-route-id="@user.Id"
                                                      method="post"
                                                      class="m-0">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger">
                                                        Usuń użytkownika
                                                    </button>
                                                </form>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </td>
                        }
                        else
                        {
                            <td></td>
                            <td></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (totalPages > 1)
{
    <nav aria-label="Paginacja" class="mt-4">
        <ul class="pagination justify-content-center">

            <li class="page-item @(page <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Users"
                   asp-route-page="@(page - 1)"
                   asp-route-pageSize="@pageSize">«</a>
            </li>

            <li class="page-item @(page == 1 ? "active" : "")">
                <a class="page-link"
                   asp-action="Users"
                   asp-route-page="1"
                   asp-route-pageSize="@pageSize">1</a>
            </li>

            @if (start > 2)
            {
                <li class="page-item disabled"><span class="page-link">…</span></li>
            }

            @for (var p = Math.Max(start, 2); p <= Math.Min(end, totalPages - 1); p++)
            {
                <li class="page-item @(p == page ? "active" : "")">
                    <a class="page-link"
                       asp-action="Users"
                       asp-route-page="@p"
                       asp-route-pageSize="@pageSize">@p</a>
                </li>
            }

            @if (end < totalPages - 1)
            {
                <li class="page-item disabled"><span class="page-link">…</span></li>
            }

            <li class="page-item @(page == totalPages ? "active" : "")">
                <a class="page-link"
                   asp-action="Users"
                   asp-route-page="@totalPages"
                   asp-route-pageSize="@pageSize">@totalPages</a>
            </li>

            <li class="page-item @(page >= totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Users"
                   asp-route-page="@(page + 1)"
                   asp-route-pageSize="@pageSize">»</a>
            </li>

        </ul>
    </nav>
}