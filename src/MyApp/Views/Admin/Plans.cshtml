@model MyApp.Web.ViewModels.TreatmentPlansViewModel;
@{
    ViewData["Title"] = "Zalecenia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var searchTxt = (string?)ViewBag.Query ?? "";
    var userId = (string?)ViewBag.UserId ?? "";
    var status = (string?)ViewBag.Status ?? "";
    var plans = Model.Plans;

    var totalPages = Model.TotalPages;
    var page = Model.Page;
    var pageSize = Model.PageSize;

    var window = 1;
    int Clamp(int v, int min, int max) => v < min ? min : (v > max ? max : v);

    var start = Clamp(page - window, 2, Math.Max(2, totalPages - 1));
    var end = Clamp(page + window, 2, Math.Max(2, totalPages - 1));

    if (start > end) { start = end; }
}

<h3 class="mb-3">Utworzone plany leczenia</h3>

<div class="mb-3">
    <form method="get" asp-controller="Admin" asp-action="Plans" class="d-flex gap-2">
        <input type="text" name="searchTxt" value="@searchTxt" class="form-control" placeholder="Wyszukaj tekst..." />
        <select name="status" class="form-select">
            <option value="" selected="@(string.IsNullOrEmpty(status) ? "selected" : null)">Wszystkie</option>
            <option value="Created" selected=@(status == "created" ? "selected" : null)>Utworzone</option>
            <option value="Claimed" selected=@(status == "claimed" ? "selected" : null)>Pobrane</option>
            <option value="Started" selected=@(status == "started" ? "selected" : null)>Rozpoczęte</option>
            <option value="Completed" selected=@(status == "completed" ? "selected" : null)>Zakończone</option>
            <option value="Expired" selected=@(status == "expired" ? "selected" : null)>Niewykorzystane</option>
        </select>
        <button type="submit" class="btn btn-success">Filtruj</button>
        <a asp-action="Plans" class="btn btn-outline-success">Wyczyść</a>
    </form>
</div>

@if (!plans.Any())
{
    <div class="alert alert-light">Nie znaleziono żadnych planów leczenia.</div>
}
else
{
    <form method="get" class="d-flex align-items-center gap-2 mb-3">
        <input type="hidden" name="searchTxt" value="@ViewBag.Query" />
        <input type="hidden" name="userId" value="@ViewBag.UserId" />
        <input type="hidden" name="status" value="@ViewBag.Status" />
        @* TODO: usunąć nieużywane pola *@
        <input type="hidden" name="userEmail" value="@ViewBag.UserEmail" />
        <input type="hidden" name="page" value="1" />

        <label class="form-label mb-0">Liczba wyników na stronie:</label>
        <select name="pageSize" class="form-select form-select-sm" style="width: auto;" onchange="this.form.submit()">
            <option value="5" selected="@(Model.PageSize == 5)">5</option>
            <option value="10" selected="@(Model.PageSize == 10)">10</option>
            <option value="20" selected="@(Model.PageSize == 20)">20</option>
            <option value="50" selected="@(Model.PageSize == 50)">50</option>

        </select>
    </form>

    <div class="table-responsive-sm">
        <table class="table table-sm align-middle mb-0">
            <thead>
                <tr>
                    <th scope="col" class="col-2">Utworzono</th>
                    <th scope="col" class="col-7">Treść</th>
                    <th scope="col" class="col-1 text-nowrap">Status</th>
                    <th scope="col" class="col-2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var plan in plans)
                {
                    <tr>
                        <td class="col-1">@plan.DateCreated.ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="col-8 text-break" style="white-space: pre-wrap;">@plan.AdviceFullText</td>
                        <td class="col-1">@plan.Status</td>

                        <td class="col-1 text-end">
                            <form 
                                asp-controller="Admin" 
                                asp-action="GetPlan" 
                                asp-route-number="@plan.Number"
                                style="display:inline">
                                <button type="submit" class="btn btn-sm btn-success">Szczegóły</button>
                            </form>
                        </td>

                        <td class="col-1 text-start">
                            <button type="button"
                                    class="btn btn-sm btn-outline-success"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deletePlanModal-@plan.Number">
                                Usuń
                            </button>

                            <div class="modal fade"
                                 id="deletePlanModal-@plan.Number"
                                 tabindex="-1"
                                 aria-labelledby="deleteUserModalLabel-@plan.Number"
                                 aria-hidden="true"
                                 data-bs-backdrop="static"
                                 data-bs-keyboard="false">

                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">

                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteUserModalLabel-@plan.Number">
                                                Potwierdzenie usunięcia planu leczenia
                                            </h5>
                                            <button type="button"
                                                    class="btn-close"
                                                    data-bs-dismiss="modal"
                                                    aria-label="Zamknij"></button>
                                        </div>

                                        <div class="modal-body">
                                            <p class="mb-0">
                                                Czy na pewno chcesz <strong>trwale usunąć plan leczenia?</strong>?
                                                <br />
                                                <small class="text-muted">
                                                    @plan.Number
                                                </small>
                                                <br />
                                                Tej operacji nie można cofnąć.
                                            </p>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="button"
                                                    class="btn btn-outline-secondary"
                                                    data-bs-dismiss="modal">
                                                Anuluj
                                            </button>

                                            <form asp-action="RemovePlan"
                                                  asp-route-number="@plan.Number"
                                                  method="post"
                                                  class="m-0">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger">
                                                    Usuń plan leczenia
                                                </button>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@if (totalPages > 1)
{
    <nav aria-label="Paginacja" class="mt-4">
        <ul class="pagination justify-content-center">

            <li class="page-item @(page <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Plans"
                   asp-route-page="@(page - 1)"
                   asp-route-pageSize="@pageSize"
                   asp-route-searchTxt="@ViewBag.Query"
                   asp-route-userId="@ViewBag.UserId"
                   asp-route-status="@ViewBag.Status"
                   asp-route-userEmail="@ViewBag.UserEmail">«</a>
            </li>

            <li class="page-item @(page == 1 ? "active" : "")">
                <a class="page-link"
                   asp-action="Plans"
                   asp-route-page="1"
                   asp-route-pageSize="@pageSize"
                   asp-route-searchTxt="@ViewBag.Query"
                   asp-route-userId="@ViewBag.UserId"
                   asp-route-status="@ViewBag.Status"
                   asp-route-userEmail="@ViewBag.UserEmail">1</a>
            </li>

            @if (start > 2)
            {
                <li class="page-item disabled"><span class="page-link">…</span></li>
            }

            @for (var p = Math.Max(start, 2); p <= Math.Min(end, totalPages - 1); p++)
            {
                <li class="page-item @(p == page ? "active" : "")">
                    <a class="page-link"
                       asp-action="Plans"
                       asp-route-page="@p"
                       asp-route-pageSize="@pageSize"
                       asp-route-searchTxt="@ViewBag.Query"
                       asp-route-userId="@ViewBag.UserId"
                       asp-route-status="@ViewBag.Status"
                       asp-route-userEmail="@ViewBag.UserEmail">@p</a>
                </li>
            }

            @if (end < totalPages - 1)
            {
                <li class="page-item disabled"><span class="page-link">…</span></li>
            }

            @if (totalPages > 1)
            {
                <li class="page-item @(page == totalPages ? "active" : "")">
                    <a class="page-link"
                       asp-action="Plans"
                       asp-route-page="@totalPages"
                       asp-route-pageSize="@pageSize"
                       asp-route-searchTxt="@ViewBag.Query"
                       asp-route-userId="@ViewBag.UserId"
                       asp-route-status="@ViewBag.Status"
                       asp-route-userEmail="@ViewBag.UserEmail">@totalPages</a>
                </li>
            }

            <li class="page-item @(page >= totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Plans"
                   asp-route-page="@(page + 1)"
                   asp-route-pageSize="@pageSize"
                   asp-route-searchTxt="@ViewBag.Query"
                   asp-route-userId="@ViewBag.UserId"
                   asp-route-status="@ViewBag.Status"
                   asp-route-userEmail="@ViewBag.UserEmail">»</a>
            </li>

        </ul>
    </nav>
}
