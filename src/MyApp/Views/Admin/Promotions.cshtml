@model MyApp.Web.ViewModels.PromotionsViewModel

@{
    ViewData["Title"] = "Zgłoszenia promocji";
}


<partial name="~/Views/Shared/_AdminNav.cshtml" />

<h2 class="mb-3">Zgłoszenia do roli Farmaceuta</h2>

@if (Model.Requests is null || Model.Requests.Count == 0)
{
    <div class="alert alert-light">
        Brak zgłoszeń oczekujących.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Użytkownik</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>PWZF</th>
                    <th>Status</th>
                    
                    <th class="text-end">Akcje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model.Requests)
                {
                    <tr>
                        <td>@r.CreatedUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="text-break">
                            <div class="fw-semibold">
                                @(string.IsNullOrWhiteSpace(r.DisplayName) ? r.Email : r.DisplayName)
                            </div>
                        </td>

                        <td>@r.FirstName</td>
                        <td>@r.LastName</td>
                        <td>@r.NumerPWZF</td>

                        <td>
                            <span class="badge bg-warning text-dark">@r.Status</span>
                        </td>

                        <td class="text-end">
                            <div class="d-inline-flex gap-2">
                                <form asp-action="ApprovePromotion" asp-controller="Admin" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="requestId" value="@r.Id" />
                                    <button type="submit"
                                            class="btn btn-secondary"
                                            onclick="return confirm('Zatwierdzić i nadać rolę Farmaceuta?');">
                                        Zatwierdź
                                    </button>
                                </form>

                                <form asp-action="RejectPromotion" asp-controller="Admin" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="requestId" value="@r.Id" />
                                    <button type="submit"
                                            class="btn btn-secondary"
                                            onclick="return confirm('Anulować (odrzucić) zgłoszenie?');">
                                        Odrzuć
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}