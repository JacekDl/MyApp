@model MyApp.Web.ViewModels.PromotionsViewModel

@{
    ViewData["Title"] = "Zgłoszenia promocji";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="mb-3">Zgłoszenia do roli Farmaceuta</h3>

@if (Model.Requests is null || Model.Requests.Count == 0)
{
    <div class="alert alert-light">
        Brak zgłoszeń oczekujących.
    </div>
}
else
{
    <div class="table-responsive-sm">
        <table class="table table-sm align-middle mb-0">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Użytkownik</th>
                    <th>Imię</th>
                    <th>Nazwisko</th>
                    <th>PWZF</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model.Requests)
                {
                    <tr>
                        <td>@r.CreatedUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@r.Email</td>

                        <td>@r.FirstName</td>
                        <td>@r.LastName</td>
                        <td>@r.NumerPWZF</td>

                        <td class="text-end">
                            <div class="d-inline-flex gap-2">
                                <form asp-action="ApprovePromotion" asp-controller="Admin" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="requestId" value="@r.Id" />
                                    <button type="submit"
                                            class="btn btn-sm btn-success"
                                            onclick="return confirm('Zatwierdzić i nadać rolę Farmaceuta?');">
                                        Zatwierdź
                                    </button>
                                </form>

                                <form asp-action="RejectPromotion" asp-controller="Admin" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="requestId" value="@r.Id" />
                                    <button type="submit"
                                            class="btn btn-sm btn-outline-success"
                                            onclick="return confirm('Anulować (odrzucić) zgłoszenie?');">
                                        Odrzuć
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}