@model MyApp.Web.ViewModels.MedicinesViewModel;

@{
    ViewData["Title"] = "Leki";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var medicines = Model.Medicines;

    var totalPages = Model.TotalPages;
    var page = Model.Page;
    var pageSize = Model.PageSize;

    var window = 1;
    int Clamp(int v, int min, int max) => v < min ? min : (v > max ? max : v);

    var start = Clamp(page - window, 2, Math.Max(2, totalPages - 1));
    var end = Clamp(page + window, 2, Math.Max(2, totalPages - 1));

    if (start > end) { start = end; }
}

<h3 class="mb-3">Leki - dostępne kody</h3>

<form method="get" class="d-flex align-items-center gap-2 mb-3">
    <input type="hidden" name="page" value="1" />

    <label class="form-label mb-0">Liczba wyników na stronie:</label>
    <select name="pageSize" class="form-select form-select-sm" style="width:auto" onchange="this.form.submit()">
        <option value="5" selected="@(Model.PageSize == 5)">5</option>
        <option value="10" selected="@(Model.PageSize == 10)">10</option>
        <option value="25" selected="@(Model.PageSize == 100)">25</option>
        <option value="50" selected="@(Model.PageSize == 200)">50</option>
    </select>
</form>

<div class="container mt-3">
    <div class="mb-3">
        <form asp-action="AddMedicine" asp-controller="Medicine" method="post" class="row g-2">
            @Html.AntiForgeryToken()
            <div class="col-sm-3">
                <input name="Code" class="form-control" placeholder="Kod" maxlength="32" /> 
            </div>
            <div class="col-sm-7">
                <input name="Name" class="form-control" placeholder="Nazwa" maxlength="128" />
            </div>
            <div class="col-sm-2 d-grid">
                <button type="submit" class="btn btn-success">Dodaj lek</button>
            </div>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th scope="col" class="col-2">Kod</th>
                    <th scope="col" class="col-8">Nazwa</th>
                    <th scope="col" class="col-1" colspan="2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in medicines)
                {
                    <tr>
                        <td class="col-2">@item.Code</td>
                        <td class="col-8">@item.Name</td>
                        <td class="col-1 text-end">
                            <form asp-action="ModifyMedicine" asp-controller="Medicine" method="get" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-success">
                                    Zmień
                                </button>
                            </form>
                        </td>
                        <td class="col-1 text-start">
                            <button type="button"
                                    class="btn btn-sm btn-outline-success"
                                    data-bs-toggle="modal"
                                    data-bs-target="#deleteMedicineModal-@item.Id">
                                Usuń
                            </button>
                            <div class="modal fade"
                                 id="deleteMedicineModal-@item.Id"
                                 tabindex="-1"
                                 aria-labelledby="deleteMedicineModalLabel-@item.Id"
                                 aria-hidden="true"
                                 data-bs-backdrop="static"
                                 data-bs-keyboard="false">

                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">

                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteMedicineModalLabel-@item.Id">
                                                Potwierdzenie usunięcia
                                            </h5>
                                            <button type="button"
                                                    class="btn-close"
                                                    data-bs-dismiss="modal"
                                                    aria-label="Zamknij"></button>
                                        </div>

                                        <div class="modal-body">
                                            <p class="mb-2">
                                                Czy na pewno chcesz usunąć lek:
                                            </p>
                                            <p class="fw-bold mb-0 text-break">
                                                @item.Code — @item.Name
                                            </p>
                                        </div>

                                        <div class="modal-footer">
                                            <button type="button"
                                                    class="btn btn-outline-secondary"
                                                    data-bs-dismiss="modal">
                                                Anuluj
                                            </button>

                                            <form asp-action="DeleteMedicine"
                                                  asp-controller="Medicine"
                                                  method="post"
                                                  class="m-0">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger">
                                                    Usuń
                                                </button>
                                            </form>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (totalPages > 1)
{
    <nav aria-label="Paginacja" class="mt-4">
        <ul class="pagination justify-content-center">

            <li class="page-item @(page <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Medicines"
                   asp-controller="Medicine"
                   asp-route-page="@(page - 1)"
                   asp-route-pageSize="@pageSize">«</a>
            </li>

            <li class="page-item @(page == 1 ? "active" : "")">
                <a class="page-link"
                   asp-action="Medicines"
                   asp-controller="Medicine"
                   asp-route-page="1"
                   asp-route-pageSize="@pageSize">1</a>
            </li>

            @{
                var innerStart = Math.Max(start, 2);
                var innerEnd = Math.Min(end, totalPages - 1);
            }

            @if (innerStart > 2)
            {
                <li class="page-item disabled"><span class="page-link">…</span></li>
            }

            @for (var p = innerStart; p <= innerEnd; p++)
            {
                <li class="page-item @(p == page ? "active" : "")">
                    <a class="page-link"
                       asp-action="Medicines"
                       asp-controller="Medicine"
                       asp-route-page="@p"
                       asp-route-pageSize="@pageSize">@p</a>
                </li>
            }

            @if (innerEnd < totalPages - 1)
            {
                <li class="page-item disabled"><span class="page-link">…</span></li>
            }

            <li class="page-item @(page == totalPages ? "active" : "")">
                <a class="page-link"
                   asp-action="Medicines"
                   asp-controller="Medicine"
                   asp-route-page="@totalPages"
                   asp-route-pageSize="@pageSize">@totalPages</a>
            </li>

            <li class="page-item @(page >= totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Medicines"
                   asp-controller="Medicine"
                   asp-route-page="@(page + 1)"
                   asp-route-pageSize="@pageSize">»</a>
            </li>

        </ul>
    </nav>
}
