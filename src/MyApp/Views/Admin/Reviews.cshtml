@model List<MyApp.Domain.Reviews.ReviewDto>

@{
    var searchTxt = (string?)ViewBag.Query ?? "";
    var userId = (string?)ViewBag.UserId ?? "";
    var completed = (string?)ViewBag.Completed ?? "";
    var infoMsg = TempData["Info"] as string;
    var errMsg = TempData["Error"] as string;
}

<partial name="~/Views/Shared/_AdminNav.cshtml" />

@if (!string.IsNullOrWhiteSpace(infoMsg) || !string.IsNullOrWhiteSpace(errMsg))
{
    <div class="toast-container position-fixed top-0 end-0 p-3 z-3" style="pointer-events: none;">
        @if (!string.IsNullOrWhiteSpace(infoMsg))
        {
            <div class="toast text-bg-success border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="true" data-bs-delay="5000" style="pointer-events: auto;">
                <div class="toast-header bg-success text-white">
                    <strong class="me-auto">Success</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    @infoMsg
                </div>
            </div>
        }
        @if (!string.IsNullOrWhiteSpace(errMsg))
        {
            <div class="toast text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false" style="pointer-events: auto;">
                <div class="toast-header bg-danger text-white">
                    <strong class="me-auto">Error</strong>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    @errMsg
                </div>
            </div>
        }
    </div>

    @section Scripts {
        <script>
            (function () {
                var toasts = document.querySelectorAll('.toast');
                toasts.forEach(function (el) {
                    var t = new bootstrap.Toast(el);
                    t.show();
                });
            })();
        </script>
    }
}

<div class="mb-3">
    <form method="get" asp-controller="Admin" asp-action="Reviews" class="d-flex gap-2">
        <input type="text" name="searchTxt" value="@searchTxt" class="form-control" placeholder="Search for text..." />
        <input type="text" name="userId" value="@userId" class="form-control" placeholder="Search for user" />
        <select name="completed" class="form-select">
            <option value="" selected="@(string.IsNullOrEmpty(completed) ? "selected" : null)">All</option>
            <option value="true" selected=@(completed == "true" ? "selected" : null)>Completed</option>
            <option value="false" selected=@(completed == "false" ? "selected" : null)>Not Completed</option>
        </select>
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Reviews" class="btn btn-outline-secondary">Clear</a>
    </form>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No reviews found</div>
}
else
{
    <div class="table-responsive-sm">
        <table class="table table-sm table-striped align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th scope="col" class="text-nowrap">Date</th>
                    <th scope="col">Text</th>
                    <th scope="col" class="text-nowrap">Completed</th>
                    <th scope="col" class="text-end" colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rev in Model)
                {
                    <tr>
                        <td class="text-nowrap">@rev.DateCreated.ToString("yyyy-MM-dd HH:mm")</td>
                        <td class="text-break" style="white-space: pre-wrap;">@rev.Text</td>

                        <td class="text-nowrap">@((rev.Completed) ? "Yes" : "No")</td>

                        <td class="text-end">
                            <div class="d-grid gap-2 d-md-inline">
                                <a asp-action="Display"
                                   asp-controller="Conversation"
                                   asp-route-number="@rev.Number"
                                   class="btn btn-sm btn-outline-primary w-100 w-md-auto text-nowrap">
                                    View
                                </a>
                            </div>
                        </td>

                        <td class="text-start text-md-end">
                            <form asp-action="DeleteReview" method="post" asp-route-id="@rev.Id" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="btn btn-sm btn-outline-danger w-100 w-md-auto text-nowrap"
                                        onclick="return confirm('Are you sure you want to remove this review?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
