@model IReadOnlyList<MyApp.Models.ReviewListItem> 

@{
    ViewData["Title"] = "Reviews";
}

<partial name="~/Views/Shared/_AdminNav.cshtml" />

<h1 class="mb-3">@ViewData["Title"]</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Info"] != null)
{
    <div class="alert alert-success">@TempData["Info"]</div>
}

@if (Model.Count == 0)
{
    <div class="alert alert-info">No reviews found</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-sm table-striped align-middle">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">UserId</th>
                    <th scope="col">Advice</th>
                    <th scope="col">Review</th>
                    <th scope="col">Date Created</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.CreatedByUserId</td>
                    <td>@user.Advice</td>
                    <td>@user.ReviewText</td>
                    <td>@user.DateCreated.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <form asp-action="RemoveReview" method="post" asp-route-id="@user.Id" style="display:inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to remove this review?');">
                                Remove
                            </button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
